set $path_host "/app/frontend/web";
set $path_index "index.php";


root        $path_host;
index       $path_index;


location / {
    # Redirect everything that isn't real file to yii bootstrap file including arguments.
    try_files $uri $uri/ /$path_index?$args;
}


# uncomment to avoid processing of calls to unexisting static files by yii
location ~ \.(js|css|png|jpg|gif|swf|ico|pdf|mov|fla|zip|rar)$ {
    try_files $uri =404;
}
error_page 404 /404.html;


location ~ \.php$ {
    include fastcgi.conf;
    include /app/vendor/nginx/conf/fastcgi_params;
    
    fastcgi_split_path_info ^(.+\.php)(/.+)$;
    fastcgi_index $path_index;
    
    fastcgi_connect_timeout 3s;
    fastcgi_read_timeout 10s;
    fastcgi_send_timeout 20s;
    fastcgi_ignore_client_abort on;
    
    limit_conn phplimit 5;
    
    fastcgi_pass_header "X-Accel-Expires";
    
    # PHP only, required if PHP was built with --enable-force-cgi-redirect
    
    fastcgi_param   SCRIPT_FILENAME $document_root$fastcgi_script_name;
    fastcgi_param	REDIRECT_STATUS		200;
    fastcgi_param   HTTPS               off;
    
    fastcgi_buffer_size 128k;
    fastcgi_buffers 4 256k;
    fastcgi_busy_buffers_size 256k;
    
    fastcgi_pass    php;
}

location ~ /(protected|framework|nbproject) {
    deny all;
    access_log off;
    log_not_found off;
}
 
location ~ /themes/\w+/views {
    deny all;
    access_log off;
    log_not_found off;
}

location ~ /\.(ht|svn|git) {
    deny all;
    access_log off;
}

location ~* \.(js|css|less|png|jpg|jpeg|gif|ico|woff|ttf|svg|tpl)$ {
    expires         max;
    add_header      Pragma public;
    add_header      Cache-Control "public, must-revalidate, proxy-revalidate";
    access_log      off;
}

location = /favicon.ico {
    log_not_found off;
    access_log off;
}

location = /robots.txt {
    log_not_found off;
    access_log off;
}

location ~ /\. {
    deny all;
    access_log off;
    log_not_found off;
}